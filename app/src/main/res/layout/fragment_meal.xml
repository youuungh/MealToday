<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contentContainer"
    android:transitionName="randomImage"
    android:fitsSystemWindows="true"
    android:background="@android:color/transparent"
    tools:context=".ui.fragments.MealFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        tools:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:fitsSystemWindows="true"
            app:statusBarScrim="@color/md_light_green_50"
            app:contentScrim="@color/md_light_green_50"
            app:layout_scrollFlags="snap|scroll|exitUntilCollapsed"
            app:title="No Data">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/mealImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                app:layout_collapseMode="parallax"/>

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/mealLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="@id/top"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/bg_round_text"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="Category"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:drawableStartCompat="@drawable/ic_category" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/bg_round_text"
                    android:drawablePadding="6dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="Location"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:drawableStartCompat="@drawable/ic_location" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/insLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/mealLayout"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end">

                <TextView
                    android:id="@+id/tvIns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:fontFamily="@font/google_sans_regular"
                    android:text="Lorem Ipsum"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="2"/>

                <ImageView
                    android:id="@+id/favoriteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvIns"
                    android:layout_toEndOf="@id/videoButton"
                    android:layout_marginTop="16dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/bg_round_search"
                    android:foreground="@drawable/bg_search_ripple"
                    android:src="@drawable/ic_favorite"/>

                <ImageView
                    android:id="@+id/videoButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvIns"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@drawable/bg_round_search"
                    android:foreground="@drawable/bg_search_ripple"
                    android:src="@drawable/ic_play"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tvInsContent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/google_sans_regular"
                android:text="@tools:sample/lorem/random"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/insLayout"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>